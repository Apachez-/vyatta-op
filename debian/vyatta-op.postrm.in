#!/bin/bash

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

if [ "$1" = "purge" ]; then
  # remove added symlinks
  rm -f ${bindir}/sudo-users/ethtool
  rm -f ${bindir}/sudo-users/dmidecode
  rm -f ${bindir}/sudo-users/iptables
  rm -f /usr/bin/count
  rm -f /usr/bin/match
  rm -f /usr/bin/no-match
  rm -f /usr/bin/no-more
fi

