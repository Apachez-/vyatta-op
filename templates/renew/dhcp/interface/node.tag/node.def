help: Renew DHCP IP address lease for specified interface
allowed:
         local -a array ;
         array=( /var/lib/dhcp3/eth* /var/lib/dhcp3/br* ) ;
         echo  -n ${array[@]##*/}

run:
       IFNAME=${4}
       sudo /opt/vyatta/bin/sudo-users/vyatta-interfaces.pl --op-command "dhcp-renew" --dev "$IFNAME"
